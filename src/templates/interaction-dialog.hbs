{{#each items}}
<div class="controlls ei-controls">
    <button class="ei-flex-container" id="{{this.id}}" 
            actionType="{{this.flags.environment-interaction-multisystem.notes-detail}}">
        <img class="ei-icon" src="{{this.img}}" />
        <div class="ei-item-details">
            <div class="ei-name">{{this.name}}</div>
            {{!-- <div class="ei-type ei-info">{{ei-type this}}</div> --}}
            <div class="ei-type">{{this.flags.environment-interaction-multisystem.notes-detail}}</div>
        </div>
    </button>
    {{#if this.flags.environment-interaction-multisystem.notes-info}} 
    <button class="ei-info" id="{{this.id}}">
        <a class="ei-icon"><i class="fas fa-info-circle"></i></a>
    </button>
    {{/if}}
</div>
{{/each}}
